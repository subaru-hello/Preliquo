{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:vue/essential",
    "eslint:recommended",
    "plugin:vue/base",
    "plugin:vue/strongly-recommended",
    "plugin:vue/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "vue/attribute-hyphenation": ["warn", "never"],
    "no-var": "error",
    "quotes": ["warn", "single"]
  }
}